{
    "compilerOptions": {
        "strict": true,
        "outDir": "build",
        "declaration": true,
        "module": "NodeNext",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}